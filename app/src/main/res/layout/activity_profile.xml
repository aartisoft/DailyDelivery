<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:textColor="#732525"
        android:layout_centerHorizontal="true" />


    <View
        android:id="@+id/divider11"
        android:layout_below="@id/tv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/divider11"
        android:text="Name: "
        android:padding="15dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_alignTop="@+id/tv2"
        android:padding="15dp"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:text="Sandeep" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/tv2"
        android:text="Phone: "
        android:padding="15dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/phoneTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_alignTop="@+id/tv3"
        android:padding="15dp"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:text="8825857851" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/tv3"
        android:text="Address: "
        android:padding="15dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/addressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_alignTop="@+id/tv4"
        android:padding="15dp"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:text="Balapur X Roads" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressTV"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:textSize="14dp"
        android:textColor="@color/colorBlack"
        android:text="To make any changes,\nPls contact customer care at 7730889469" />

</RelativeLayout>