<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/walletBalanceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wallet Balance: 0"
        android:textAlignment="textEnd"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:gravity="end" />

    <com.github.jhonnyx2012.horizontalpicker.HorizontalPicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walletBalanceEditText"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePicker">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ordersforthedayTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orders for the Day" />

            <View
                android:id="@+id/divider"
                android:layout_below="@+id/ordersforthedayTV"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="10dp"
                android:background="?android:attr/listDivider" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ordersforthedayRV"
                android:layout_below="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/createRecurringOrderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="createRecurringOrderBtnOnClick"
            android:textSize="11dp"
            android:text="New Recurring Order"
            android:minHeight="0dp"
            android:minWidth="0dp" />

        <Button
            android:id="@+id/createOrderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="11dp"
            android:onClick="createOrderBtnOnClick"
            android:text="New Order"
            android:minHeight="0dp"
            android:minWidth="0dp" />

    </android.support.v7.widget.LinearLayoutCompat>


</RelativeLayout>